html
    head
        meta(charset="utf-8")
        title #{title}
        include ./includes/head
        script(src="/js/signin.js")
    body
        div.body.theme-showcase(role="document")
            div.top(style="background-color: #ffffff; border-color: #ffffff; margin:0px 30px 0px 30px")
                img.pull-left(src="/picture/title.png", alt="G~L~U~E~C~I~R~C~L~E", style="width:200px; height:60px")
                form.navbar-form.navbar-right
                    a(href="/signup" class="btn btn-success") Sign up
                div.clearfix
            div.clearfix
        div.page-header.text-center
            span
                h1 登录胶圈
        form
            div(class="form-group", style="width:70%; margin:0 auto; padding-left:12%")
                div
                    label(for="account") Account
                input.pull-left(type="text" class="form-control visible-lg-inline-block " id="account" placeholder="Username" style="width:40%;margin-top:0px")
                div.hidden.pull-left(style="width:40%; margin-left:30px;")
                    span.label.label-info(style="word-break:break-all") 最少8位数字和字母的组合
                    span.label.label-success 输入合理
            div.clearfix
            div(class="form-group", style="width:70%; margin:10px auto; padding-left:12%")
                div
                    label(for="password") password
                input.pull-left(type="text" class="form-control visible-lg-inline-block " id="password" placeholder="psssword" style="width:40%;margin-top:0px")
                div.hidden.pull-left(style="width:40%; margin-left:30px;")
                    span.label.label-info(style="word-break:break-all") 最少8位数字和字母的组合
                    span.label.label-success 输入合理
            div.clearfix
            div(class="form-group", style="width:70%; margin:10px auto; padding-left:12%")
                div.checkbox
                    label
                        input(type="checkbox"  id="remenber" )
                        span Remenber me
            div.clearfix
            div(class="form-group", style="width:70%; margin:10px auto; padding-left:12%")
                label(id='submit' class='btn btn-default') submit

